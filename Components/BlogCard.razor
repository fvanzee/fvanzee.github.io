<MudCard Class="ma-4">
    <MudCardMedia Image=@ImageSrc />
    <MudCardContent>
        <MudText Typo="Typo.h6">@Title</MudText>
        <MudText Typo="Typo.body2">@Created.ToString("D")</MudText>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string ImageSrc { get; set; } = string.Empty;

    [Parameter]
    public DateTime Created { get; set; }
}