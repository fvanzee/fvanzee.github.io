@page "/blogs/{slug}"
@inject HttpClient Http


@using freekvanzee.Components;
@using freekvanzee.Helpers

<PageTitle>Freek van Zee | Blog | @BlogHelper.GetTitleCaseTitle(Slug)</PageTitle>
<MudCard>
    <MudCardMedia Style="background-size: contain;" Image=@ImageSrc />
    @* <MudPaper MinWidth="320px" class="align-center ma-4"> *@
        <MarkdownPaper Title=@BlogHelper.GetTitleCaseTitle(Slug) MarkdownFile=@MarkdownFile />
    @* </MudPaper> *@
</MudCard>

@code {

    [Parameter]
    public string Slug { get; set; } = string.Empty;

    private string ImageSrc => $"images/blogs/{Slug}.png";

    private string MarkdownFile => $"blogs/{Slug}.md";

}
