@page "/blogs"
@using freekvanzee.Components
@using freekvanzee.Helpers

<PageTitle>Freek van Zee | Blogs</PageTitle>

<MudStack>
    @foreach (var blog in blogs)
    {
        var blogPath = $"blogs/{blog.Slug}";
        <MudLink Href=@blogPath>
            <BlogCard ImageSrc=@blog.ImageSrc Title=@BlogHelper.GetTitleCaseTitle(blog.Slug) Created="@blog.Created" />
        </MudLink>
    }
    </MudStack>

    @code {
    private List<Blog> blogs = new List<Blog>();

    protected override void OnInitialized()
    {
        blogs = new List<Blog>
{
new Blog { Slug = "a_blazor_webassembly_static_site_on_github_pages", Created = new DateTime(2025, 1, 28) },
};
    }

    public class Blog
    {
        public required string Slug { get; init; } = string.Empty;

        public required DateTime Created { get; init; }

        public string ImageSrc => $"images/blogs/{Slug}.png";
    }
}
